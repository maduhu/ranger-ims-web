

<div class="row-fluid">
  <div class="span6">
    <p class="lead">
      <%= display_name @incident %>
    </p>
    <dl class="dl-horizontal">
      <dt>Incident Number</dt>
      <dd><%= @incident[:number]%></dd>
      <dt>Priority</dt>
      <dd><%= @incident[:priority]%></dd>
      <dt>Location</dt>
      <dd><%= display_location_show(@incident) %></dd>
    </dl>
    <div class="row-fluid">
      <div class="span8">
        Ranger Names
        <ul class="unstyled well well-small">
          <% @incident[:ranger_handles].each do | handle | %>
            <li><%= handle %></li>
          <% end %>
        </ul>
      </div>
      <div class="span4">
        Incident Type
        <ul class="unstyled well well-small"
        <% @incident[:incident_types].each do | itype | %>
            <li><%= itype %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="span6">
    <p class="lead"><%= display_status @incident %><p>
    <table class="table">
      <tr>
        <td>Opened</td><td><%= display_dt2(@incident, :created)%></td>
      </tr>
      <tr>
        <td>Dispatched</td><td><%= display_dt2(@incident, :dispatched)%></td>
      </tr>
      <tr>
        <td>On Scene</td><td><%= display_dt2(@incident, :on_scene)%></td>
      </tr>
      <tr>
        <td>Closed</td><td><%= display_dt2(@incident, :closed)%></td>
      </tr>
    </table>
    <p>
      <a href="#" class="btn btn-block " type="button">Close Incident</a>
      <a href="#" class="btn btn-block " type="button">Set On Scene</a>
      <a href="#" class="btn btn-block " type="button">Set Dispatched</a>
      <a href="#" class="btn btn-block btn-warning" type="button">Re-Open Incident</a>
    </p>
  </div>


</div>
<div class="row-fluid">
  <p>
    Incident Report
  </p>
  <% @incident[:report_entries].each do | entry |
    if entry[:system_entry] %>
      <%= render :partial => "system_entry", :object => entry %>
  <% else %>
      <%= render :partial => "report_entry", :object => entry %>
  <% end # if %>
  <% end # do %>
</div>

